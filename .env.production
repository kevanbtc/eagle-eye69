# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# ================================
# DATABASE
# ================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Examples:
#   - Vercel Postgres: postgres://default:xxx@xxx.postgres.vercel-storage.com:5432/verceldb
#   - Railway: postgresql://postgres:xxx@containers-us-west-xxx.railway.app:5432/railway
#   - Render: postgres://user:pass@xxx.render.com/dbname
#   - Neon: postgresql://user:pass@xxx.neon.tech/dbname?sslmode=require
#   - Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres
DATABASE_URL="postgresql://user:password@host:5432/eagle_eye?schema=public"

# ================================
# AUTHENTICATION
# ================================
# JWT secret for token signing (MUST be 32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-change-this"

# ================================
# AI FEATURES
# ================================
# OpenAI API key for AI cost estimation and imagery generation
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV="production"
PORT=5000

# ================================
# EMAIL (Optional - for notifications)
# ================================
# Gmail SMTP (use App Password, not regular password)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@eagleeye.com"
EMAIL_TO="admin@eagleeye.com"

# Or use SendGrid
# SENDGRID_API_KEY="SG.your-sendgrid-api-key"

# Or use Resend
# RESEND_API_KEY="re_your-resend-api-key"

# ================================
# SMS (Optional - for appointment reminders)
# ================================
# Twilio credentials
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE="+12345678900"

# ================================
# PAYMENT PROCESSING (Optional)
# ================================
# Stripe credentials
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ================================
# CLOUD STORAGE (Optional)
# ================================
# Azure Blob Storage for file uploads
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=xxx;AccountKey=xxx;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER="eagle-eye-uploads"

# Or AWS S3
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="eagle-eye-uploads"

# ================================
# CALENDAR INTEGRATION (Optional)
# ================================
# Google Calendar API
GOOGLE_CALENDAR_API_KEY="your-google-calendar-api-key"
GOOGLE_CALENDAR_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CALENDAR_CLIENT_SECRET="your-client-secret"

# ================================
# EXTERNAL INTEGRATIONS (Optional)
# ================================
# STACK Takeoff Software
STACK_API_KEY="your-stack-api-key"
STACK_API_URL="https://api.stackct.com/v1"

# Buildxact
BUILDXACT_API_KEY="your-buildxact-api-key"
BUILDXACT_API_URL="https://api.buildxact.com/v1"

# Unykorn Vault (for tokenization)
VAULT_API_URL="https://vault.unykorn.com/api"
VAULT_API_KEY="your-vault-api-key"

# ================================
# MONITORING (Optional)
# ================================
# Sentry for error tracking
# Get from: https://sentry.io
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_ENVIRONMENT="production"

# LogRocket for session replay
LOGROCKET_APP_ID="your-app-id"

# ================================
# ANALYTICS (Optional)
# ================================
# Google Analytics
GA_TRACKING_ID="G-XXXXXXXXXX"

# Facebook Pixel
FB_PIXEL_ID="1234567890"

# ================================
# CORS CONFIGURATION
# ================================
# Allowed origins (comma-separated)
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# ================================
# RATE LIMITING
# ================================
# Requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ================================
# LEAD CAPTURE (for standalone form)
# ================================
# Vercel KV (Redis)
KV_REST_API_URL="https://xxx.kv.vercel-storage.com"
KV_REST_API_TOKEN="xxx"
