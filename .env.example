# Database
DATABASE_URL="postgresql://user:password@localhost:5432/eagle_eye_estimating"

# Server
PORT=5000
NODE_ENV=development

# JWT (REQUIRED - Must be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# CORS (Production only - comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (optional, defaults shown)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Sentry Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# STACK Integration (optional)
STACK_API_KEY=your-stack-api-key
STACK_API_URL=https://api.stackct.com/v1

# Buildxact Integration (optional)
BUILDXACT_API_KEY=your-buildxact-api-key
BUILDXACT_API_URL=https://api.buildxact.com/v1

# Unykorn Vault Integration
VAULT_API_URL=https://vault.unykorn.com/api
VAULT_API_KEY=your-vault-api-key

# Azure Blob Storage (optional)
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_STORAGE_CONTAINER=eagle-eye-docs
